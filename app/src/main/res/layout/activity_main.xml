<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCE2ED"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:text="Consultas"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="4dp"
        android:background="#fff" />

    <Button
        android:id="@+id/bottom_Adicionar_Consulta"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#8EBDD3"
        android:text="Adicionar Consulta"
        android:textSize="16dp" />


    <Button
        android:id="@+id/bottom_Mostrar_Consulta"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#8EBDD3"
        android:text="Mostrar Consultas"
        android:textSize="16dp" />



    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="4dp"
        android:layout_marginTop="80dp"
        android:background="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:text="Medicamentos"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bottom_Adicionar_Lembrete"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#8EBDD3"
        android:text="Adicionar Lembrete"
        android:textSize="16dp" />



    <Button
        android:id="@+id/bottom_Mostar_Lembretes"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:backgroundTint="#8EBDD3"
        android:text="Mostrar Lembretes"
        android:textSize="16dp" />




</LinearLayout>


